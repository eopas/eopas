#clear
#flash
  - flash.each do |name, msg|
    %div.notice{:id => "flash_#{name}"}
      %div.notify_close
        = image_tag 'closebox.png', :id => "closebox", :alt => "closebox"
      %div.notify_msg
        %h3= msg

:javascript
  $(document).ready(function () {
    $('#flash img').click(function () {
      $('#flash').hide();
    });
  });

